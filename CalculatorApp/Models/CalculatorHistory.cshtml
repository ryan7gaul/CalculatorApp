@page
@model CalculatorApp.Models.CalculatorHistoryModel

@{
    ViewData["Title"] = "CalculatorHistory";
}

<h1>CalculatorHistory</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CalculatorHistory[0].Input)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalculatorHistory[0].Output)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalculatorHistory[0].UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CalculatorHistory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Input)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Output)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
